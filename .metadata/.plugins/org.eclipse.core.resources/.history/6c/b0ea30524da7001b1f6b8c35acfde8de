package exercicios;

public class ExercicioVariaveis {

	public static void main(String[] args) {
		int idade = 20;
		double altura = 1.75;
		double peso = 52.5;
		
		System.out.println("O funcionário João tem: ");
		System.out.println("idade: " + 20);
		System.out.println("altura: " + altura);
		System.out.println("peso: " + peso);
	}

}
