package exercicios;

public class ParesEImpares {

	public static void main(String[] args) {
		int pares = 0;
		int impares = 0;
		int multiplosDeDois = 0;
		
		for (int i = 0; i <= 30; i++) {
			if(i % 2 == 0) {
				pares++;
			} else {
				impares++;
			}
		}

		System.out.println("Pares: " + pares);
		System.out.println("Ímpares: " + impares);
		
		for (int i = 1; i <= 22; i++) {
			if(i % 2 == 0) {
				System.out.print("Java ");
				multiplosDeDois++;
			}
		}
		
		System.out.println("\nTotal de múltiplos de 2: " + multiplosDeDois);
	}

}
